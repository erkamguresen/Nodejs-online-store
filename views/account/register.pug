extends ../layouts/main-layout.pug 

block styles
    link(rel="stylesheet" href='/css/forms.css')

block content
    if errorMessage
        div.alert.alert-danger.col-sm-7 #{errorMessage}
    
    form(method="post" action="/register")
        input(type="hidden" name="_csrf" value=`${csrfToken}`)
        .form-group.row.my-1
            label(for="name").col-sm-3.col-form-label Name
            .col-sm-4
                input(type="text" placeholder="Enter your name"
                                name="name").form-control#emailLabel
        .form-group.row.my-1
            label(for="email").col-sm-3.col-form-label Email
            .col-sm-4
                input(type="text" placeholder="Enter your email address"
                                name="email").form-control#email

        .form-group.row.my-1
            label(for="password").col-sm-3.col-form-label Password
            .col-sm-4
                input(type="password" placeholder="Enter your password"
                                name="password").form-control#password
        
        .form-group.row.my-1
            label(for="confirmPassword").col-sm-3.col-form-label Confirm Your Password
            .col-sm-4
                input(type="password" placeholder="Re-Enter your password"
                                name="confirmPassword").form-control#confirmPassword
                
        .form-group.row.my-1  
            label(for="categoryIds").col-sm-3.col-form-label Create Merchant (Admin) Account                          
            .col-sm-4
                input(type="checkbox" value='merchant' 
                    name="isMerchant" ).form-check-input#isMerchant
                
        .form-group.row.my-1
            .col-sm-3.offset-sm-3
                input(type="submit" value="Register").btn.btn-primary
        
        