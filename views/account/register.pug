extends ../layouts/main-layout.pug 

block styles
    link(rel="stylesheet" href='/css/forms.css')

block content
    if errorMessage
        div.alert.alert-danger.col-sm-7 #{errorMessage}
    if (error!==undefined && error === 'password-mismatch')
        div.alert.alert-danger The passwords do not match.
    
    if (error!==undefined && error === 'weak-password')
        div.alert.alert-danger Your password is too weak. It must be at least 8 characters long and contain at least one number and at least one capital letter.

    if (error!==undefined && error === 'email-exists')
        div.alert.alert-danger Your email already exists. Please try again.

    if (error!==undefined && error === 'email-format')
        div.alert.alert-danger Your email seems to be invalid. Please try again.

    form(method="post" action="/register")
        input(type="hidden" name="_csrf" value=`${csrfToken}`)
        .form-group.row.my-1
            label(for="name").col-sm-3.col-form-label Name
            .col-sm-4
                input(type="text" placeholder="Enter your name"
                                name="name").form-control#email
        .form-group.row.my-1
            label(for="email").col-sm-3.col-form-label Email
            .col-sm-4
                input(type="text" placeholder="Enter your email address"
                                name="email").form-control#email

        .form-group.row.my-1
            label(for="password").col-sm-3.col-form-label Password
            .col-sm-4
                input(type="password" placeholder="Enter your password"
                                name="password").form-control#password
        
        .form-group.row.my-1
            label(for="confirmPassword").col-sm-3.col-form-label Confirm Your Password
            .col-sm-4
                input(type="password" placeholder="Re-Enter your password"
                                name="confirmPassword").form-control#password
                
        .form-group.row.my-1
            .col-sm-3.offset-sm-3
                input(type="submit" value="Register").btn.btn-primary
        
        