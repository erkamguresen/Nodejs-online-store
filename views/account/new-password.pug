extends ../layouts/main-layout.pug 

block styles
    link(rel="stylesheet" href='/css/forms.css')

block content
    if errorMessage
        div.alert.alert-danger.col-sm-7 #{errorMessage}
        
    form(method="post" action="/new-password")
        input(type="hidden" name="_csrf" value=`${csrfToken}`)
        input(type="hidden" name="userId" value=`${userId}`)
        input(type="hidden" name="passwordToken" value=`${passwordToken}`)

        .form-group.row.my-1
            label(for="password").col-sm-3.col-form-label Password
            .col-sm-4
                input(type="password" placeholder="Enter your password"
                                name="password").form-control#password
        
        .form-group.row.my-1
            label(for="confirmPassword").col-sm-3.col-form-label Confirm Your Password
            .col-sm-4
                input(type="password" placeholder="Re-Enter your password"
                                name="confirmPassword").form-control#password
                
        .form-group.row.my-1
            .col-sm-3.offset-sm-3
                input(type="submit" value="Submit").btn.btn-primary
        
        