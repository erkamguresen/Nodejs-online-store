extends ../layouts/main-layout.pug 

block styles
    link(rel="stylesheet" href='/css/forms.css')

block content
    form(method="register" action="/reset-password")

        .form-group.row.my-1
            label(for="email").col-sm-3.col-form-label Email
            .col-sm-4
                input(type="text" placeholder="Enter your email address"
                                name="email").form-control#email
                
        .form-group.row.my-1
            .col-sm-3.offset-sm-3
                input(type="submit" value="Sent Reset Link").btn.btn-primary
        
        