extends ../layouts/main-layout.pug 

block styles
    link(rel="stylesheet" href='/css/forms.css')

block content
    form(method="post" action="/admin/products")

        input(type="hidden" name="id" value=`${product.id}`)

        .form-group.row.my-1
            label(for="name").col-sm-3.col-form-label Product Name
            .col-sm-9
                input(type="text" value=`${product.name}`
                                name="name").form-control#name

        .form-group.row.my-1
            label(for="price").col-sm-3.col-form-label Price
            .col-sm-9
                input(type="text" value=`${product.price}`
                                name="price").form-control#price

        .form-group.row.my-1
            label(for="imageURL").col-sm-3.col-form-label Image File
            .col-sm-9
                input#image(type="text" value=`${product.imageURL}`
                                name="imageURL").form-control

        .form-group.row.my-1
            label(for="categoryId").col-sm-3.col-form-label Category Id
            .col-sm-9
                select(name="categoryId").form-control#categoryId
                    option(value="-1") Select Category
                    each category in categories
                        option(value=`${category.id}` selected=(category.id === product.categoryId)) #{category.name}

        .form-group.row.my-1
            label(for="description").col-sm-3.col-form-label Description
            .col-sm-9
                textarea#description.form-control(cols='30' rows='10' 
                name="description") #{product.description}

        .form-group.row.my-1
            .col-sm-3.offset-sm-3
                input(type="submit" value="Update Product").btn.btn-primary
        
        