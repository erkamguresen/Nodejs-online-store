extends ../layouts/main-layout.pug 

block styles
    link(rel="stylesheet" href='/css/forms.css')

block content
    form(method="post" action="/admin/add-category")
        input(type="hidden" name="_csrf" value=`${csrfToken}`)
        .form-group.row.my-1
            label(for="name").col-sm-3.col-form-label Name
            .col-sm-9
                input(type="text" placeholder="Enter Category Name"
                                name="name").form-control#name

        .form-group.row.my-1
            label(for="description").col-sm-3.col-form-label Description
            .col-sm-9
                textarea#description.form-control(cols='30' rows='10' 
                name="description")
                
        .form-group.row.my-1
            .col-sm-3.offset-sm-3
                input(type="submit" value="Save Category").btn.btn-primary
        
        