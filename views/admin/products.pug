extends ../layouts/main-layout.pug

block content
    if (action!==undefined && action === 'delete')
        div.alert.alert-danger The product has been successfully deleted.

    if (action!==undefined && action === 'edit')
        div.alert.alert-success The product has been successfully updated.

    .row
        if products.length > 0
            table.table-bordered 
                thead 
                    tr 
                        th Image
                        th Product Name
                        th Price
                        th
                tbody
                    each product in products
                        tr 
                            td 
                                img(src=`/img/${product.imageURL}` width='80')
                            td #{product.name}
                            td #{product.price} â‚¬
                            td 
                                a.btn.btn-primary.btn-sm.m-2(href=`/admin/products/${product.id}`) Edit 

                                form(action='/admin/delete-product' method='post')
                                    input(type='hidden' name='id' value=`${product.id}`)
                                    button(type='submit').btn.btn-danger.btn-sm.m-2 Delete
        else 
            h1 No Products


