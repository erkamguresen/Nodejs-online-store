extends layouts/main-layout.pug 

block styles
    link(rel="stylesheet" href='/css/forms.css')

block content
    form(method="post" action="/admin/addproduct")
        .form-group.row.my-1
            label(for="name").col-sm-3.col-form-label Product Name
            .col-sm-9
                input(type="text" placeholder="Enter Product Name"
                                name="name").form-control#name

        .form-group.row.my-1
            label(for="price").col-sm-3.col-form-label Price
            .col-sm-9
                input(type="text" placeholder="Enter Product Price"
                                name="price").form-control#price

        .form-group.row.my-1
            label(for="image").col-sm-3.col-form-label Name
            .col-sm-9
                input(type="text" placeholder="Enter Product Image"
                                name="image").form-control#image

        .form-group.row.my-1
            label(for="description").col-sm-3.col-form-label Description
            .col-sm-9
                input(type="text" placeholder="Enter Product Name"
                                name="description").form-control#description                                                

        .form-group.row.my-1
            .col-sm-3.offset-sm-3
                input(type="submit" value="Save Product").btn.btn-primary
        
        