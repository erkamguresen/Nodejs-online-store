extends layouts/main-layout.pug 

block styles
    link(rel="stylesheet" href='/css/forms.css')

block content
    form(method="post" action="/admin/addproduct")
        .form-group.row
            label(for="productName").col-sm-2.col-form-label Name
            .col-sm-10
                input(type="text" placeholder="Enter Product Name"
                                name="productName").form-control#productName
        .form-group.row
            .col-sm-3.offset-sm-2
                input(type="submit" value="Save Product").btn.btn-primary
        
        