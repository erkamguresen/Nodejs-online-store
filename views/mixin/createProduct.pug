mixin createProduct(product)
    .col-md-4
        .card
            img.card-img-top(src=`/img/${product.imageURL}` alt=`${product.description}`)
            .card-body
                h4.card-title
                    a(href=`/products/${product.id}`) #{product.name}

                p.card-text.pt-2 #{product.description}     
                
                small.text-muted
                    i.fas.fa-euro-sign #{product.price}

            .card-footer.text-center

                a(href=`/products/${product.id}`).btn.btn-outline-primary.btn-sm.m-2 Details

                a(href="#").btn.btn-outline-primary.btn-sm.m2 Add to Cart