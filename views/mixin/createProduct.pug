mixin createProduct(product)
    .col-md-4
        .card.mb-3
            img.card-img-top.mt-2(src=`/img/${product.imageURL}` alt=`${product.description}`)
            .card-body
                h4.card-title
                    a(href=`/products/${product._id}`) #{product.name}

                //- p.card-text.pt-2 !{product.description}     
                
                small.text-muted #{product.price} 
                    i.fas.fa-euro-sign  

            .card-footer.text-center

                a(href=`/products/${product._id}`).btn.btn-outline-primary.btn-sm.m-2 Details

                form(action='/cart' method='post')
                    input(type="hidden" name="_csrf" value=`${csrfToken}`)
                    input(type='hidden' name='productId' value=`${product._id}`)
                    button(type='submit').btn.btn-outline-primary.btn-sm.m2 Add to Cart